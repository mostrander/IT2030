@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron" id="IndexBackground">
    <div id="homepage">
        <h1 id="homepage-title">Event R Us</h1>
        <p class="lead">Find events near you. Never miss out again!</p>
    </div>

</div>

<div class="row">
    <div class="col-md-4" id="homeSearchBox">
        <h3 id="homeSearch">Find an Event</h3>
        <div class="panel-body, searchBars">
            @using (Ajax.BeginForm("EventSearch", "EventStore", new AjaxOptions
            {
                InsertionMode = InsertionMode.Replace,
                HttpMethod = "GET",
                OnFailure = "searchFailed",
                LoadingElementId = "ajax-loader",
                UpdateTargetId = "searchresults"
            }))
            {
                <input type="text" name="q" placeholder="Event Type or Event Title" />
                <input id="searchButton" type="submit" value="search" class="button" />
                <img id="ajax-loader"
                     src=""
                     style="display:none" />
            }

        </div>

        <div class="panel-body, searchBars">
            @using (Ajax.BeginForm("LocationSearch", "EventStore", new AjaxOptions
            {
                InsertionMode = InsertionMode.Replace,
                HttpMethod = "GET",
                OnFailure = "searchFailed",
                LoadingElementId = "ajax-loader",
                UpdateTargetId = "searchresults"
            }))
            {
                <input type="text" name="p" placeholder="Location, City, or State" />
                <input id="searchButton2" class="button" type="submit" value="search" />
                <img id="ajax-loader"
                     src=""
                     style="display:none" />
            }

        </div>


    </div>


    <div class="col-md-4" id="noColor">
        <button type="submit" class="button" id="deals">
            @Ajax.ActionLink("Click here to see last minute deals!", "Deals", "EventStore", null, new AjaxOptions
                       {
                           InsertionMode = InsertionMode.Replace,
                           HttpMethod = "GET",
                           OnFailure = "searchFailed",
                           LoadingElementId = "ajax-loader",
                           UpdateTargetId = "dealsTable"
                       },
                            new { @class = "button" })
        </button>

        <div id="dealsTable"></div>
    </div>
</div>

<div id="searchresults"></div>

@section scripts
    {
    <script src="~/Scripts/App/EventScripts.js"></script>
    <script src="~/Scripts/modernizr-2.8.3.js"></script>

    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
}