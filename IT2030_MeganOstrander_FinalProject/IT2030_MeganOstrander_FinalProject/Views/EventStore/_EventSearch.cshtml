@model IEnumerable<IT2030_MeganOstrander_FinalProject.Models.Event>


<div id="searchresults">

    <table class="table">
        <tr>
            <th colspan="4" id="dailyHeader">
                Results
            </th>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <button id="dailyButton" class="button">
                        @Html.ActionLink(@item.Title, "Details", "EventStore", new { id = item.EventId }, null)
                    </button>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>

            </tr>
        }

    </table>
</div>


@section scripts
    {
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/App/EventScripts.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
}